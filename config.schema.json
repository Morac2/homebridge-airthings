{
  "pluginAlias": "Airthings",
  "pluginType": "accessory",
  "footerDisplay": "Generating a Client ID & Secret: [Airthings Dashboard](https://dashboard.airthings.com) -> Integrations -> Request API Client",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Airthings Device"
      },
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "required": true
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true
      },
      "serialNumber": {
        "title": "Serial Number",
        "type": "string",
        "required": true
      },
      "refreshInterval": {
        "title": "Refresh Interval (seconds)",
        "type": "number",
        "required": false,
        "default": 150
      }
    }
  }
}